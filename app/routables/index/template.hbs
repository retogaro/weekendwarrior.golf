<main
  id="homepage"
  class="page"
>

  <section id="hero">
    <div class="navbar">
      <ul>
        <li><a href="/">Weekend Warrior</a></li>
        <li><a href="About">About</a></li>
        <li><a href="Products">Products</a></li>
        <li><a href="Contact">Contact</a></li>
      </ul>
    </div>
  </section>

  <section id="products">
    <ul class="column">
      {{#each @model.products as |product|}}
        <li class="product">
          <div class="image">
            <img src={{product.image}}>
            {{#if product.sold}}
              <p>SOLD</p>
            {{else}}
              <p>${{product.price}}</p>
            {{/if}}
          </div>
          <div class="text">
            <h4>{{product.brand}}<small>{{product.model}}</small></h4>
            <dl>
              <dt>Condition:</dt>
              <dd>{{product.condition}}</dd>
              <dt>Shaft:</dt>
              <dd>{{product.shaft}}</dd>
              <dt>Length:</dt>
              <dd>{{product.length}}</dd>
              <dt>Club Range:</dt>
              <dd>{{product.clubrange}}</dd>
            </dl>
            <p>{{product.description}}
            </p>
            <p>
              <LinkTo
                @route="product"
                @model={{@model.slug}}
              >Read more</LinkTo>
            </p>
          </div>
        </li>
      {{/each}}
    </ul>
  </section>


